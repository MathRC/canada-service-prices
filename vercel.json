{
  "version": 2,
  "builds": [
    {
      "src": "dashboard/app.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb"  // Allows large data files
      }
    },
    {
      "src": "dashboard/assets/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "dashboard/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard/app.py"
    }
  ]
}
